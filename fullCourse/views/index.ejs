<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>

    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>
       <% if(blogs.length > 0) { 
            blogs.map(blog => { %>
                <a href="/blogs/<%= blog._id %>">
                    <h2><%= blog.title%></h2>
                    <h4><%= blog.snippet %></h4>
                </a>
           <% })
        } else {
            %> <p>---- NO BLOG YET ----</p> <%
        }%>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>