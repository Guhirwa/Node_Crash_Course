<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>

    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All Blogs</h2>
       <% if(blogs.length > 0) { 
            blogs.map(blog => { %>
                <h2><%= blog.title%></h2>
                <h4><%= blog.snippet %></h4>
                <p><%= blog.body %></p>
           <% })
        } else {
            %> <h4>---- NO BLOG YET ----</h4> <%
        }%>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>